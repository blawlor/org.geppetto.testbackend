<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xmlns:osgi="http://www.springframework.org/schema/osgi"	
		xmlns:aop="http://www.springframework.org/schema/aop"
		xsi:schemaLocation="http://www.springframework.org/schema/beans
							http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
							http://www.springframework.org/schema/osgi
							http://www.springframework.org/schema/osgi/spring-osgi-1.1.xsd
							http://www.springframework.org/schema/aop 
       						http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- Exports the service implementation to other bundles by its service interface -->
	<osgi:service id="DummyModelExporter" ref="dummyModelInterpreterService" interface="org.geppetto.core.model.IModelInterpreter">
		<osgi:service-properties>
			<entry key="discoverableID" value="dummyModelInterpreter" />
		</osgi:service-properties>
	</osgi:service>
	<bean id="dummyModelInterpreterService" scope="thread" class="org.geppetto.testbackend.services.DummyModelInterpreterService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	<osgi:service id="DummySimulatorExporter" ref="dummySimulatorService" interface="org.geppetto.core.simulator.ISimulator">
		<osgi:service-properties>
			<entry key="discoverableID" value="dummySimulator" />
		</osgi:service-properties>
	</osgi:service>
	<bean id="dummySimulatorService" scope="thread" class="org.geppetto.testbackend.services.DummySimulatorService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	<osgi:service id="NeuronModelExporter" ref="neuronModelInterpreterService" interface="org.geppetto.core.model.IModelInterpreter">
		<osgi:service-properties>
			<entry key="discoverableID" value="neuronModelInterpreter" />
		</osgi:service-properties>
	</osgi:service>
	<bean id="neuronModelInterpreterService" scope="thread" class="org.geppetto.testbackend.services.NeuronModelInterpreterService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
	<osgi:service id="NeuronSimulatorExporter" ref="neuronSimulatorService" interface="org.geppetto.core.simulator.ISimulator">
		<osgi:service-properties>
			<entry key="discoverableID" value="neuronSimulator" />
		</osgi:service-properties>
	</osgi:service>
	<bean id="neuronSimulatorService" scope="thread" class="org.geppetto.testbackend.services.NeuronSimulatorService">
	<aop:scoped-proxy proxy-target-class="false"/>
	</bean>
</beans>
